<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th><h2>Article List</h2></th>
        <th>Summary</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.summary %></td>
        <td><%= article.comments.count %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'R u sure m8?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Article', new_article_path, class: "btn btn-default" %>
</div>
