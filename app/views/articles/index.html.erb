<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th><h2>Article List</h2></th>
        <th>Summary</th>
        <th>Whoppers</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article), class: "btn btn-default" %></td>
        <td><%= article.summary %></td>
				<td><div class="star" data-score=<%= article.whoppers.to_i %>></div></td>
        <td><%= article.comments.count %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'R u sure m8?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Article', new_article_path, class: "btn btn-default" %>
</div>

<script>
	$('.star').raty({
		starOff: 'burger-empty.png',
		starOn: 'burger-full.png',
		readOnly: true,
		path: '/assets'
	});
</script>

