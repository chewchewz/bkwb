<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th><h2>User</h2></th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user), class: "btn btn-default" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, :class => "btn btn-default" %>
</div>
